<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{id}}">{{blog_name}}</a>
    </h2>
    <p>Posted by {{user.name}} on {{format_date createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog_body}}
    </p>
  </div>
</div>
{{/each}}
