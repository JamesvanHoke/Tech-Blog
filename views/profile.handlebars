<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 id="CANB">Create a New Blog:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label id="title" for="blog-name">Title your blog:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label id="body" for="blog-body">Blog Body:</label>
        <textarea class="form-input" id="blog-body" name="blog-body"></textarea>
      </div>
      <div class="form-group">
        <button id="createBtn" type="submit" class="btn btn-primary">Create</button>
        <button id="sendUpdate" type="submit" class="btn btn-primary d-none">Update</button>
      </div>
    </form>
  </div>

  {{#if blogposts.length}}
  <div class="col-md-6 project-list">
    <h3 class="mb-5">Current Blog Posts:</h3>

    {{#each blogposts as |post|}}
    <div class="row mb-2 ml-1 p-1 border border-secondary rounded">
      <div class="col-md-7">
        <h4><a href="/post/{{post.id}}">{{post.blog_name}}</a></h4>
      </div>
      <div class="col-md-5">
        <button id="updateBtn" class="btn btn-sm btn-info" data-name="{{post.blog_name}}" data-body="{{blog_body}}" data-id="{{post.id}}">UPDATE</button>
        <button id="deleteBtn" class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>